<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ClassNameFormat</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(Name, &quot;[A-Z]{3}[0-9]{3}&quot;))</errorConditionFormula>
    <errorDisplayField>Name</errorDisplayField>
    <errorMessage>Please enter class  name with the format of XXX###.  For example, History 100 should be entered as HIS100</errorMessage>
</ValidationRule>
